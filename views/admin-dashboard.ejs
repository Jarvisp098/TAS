<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Time Attendance System</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css">  </head>
<body>
    <header>
    <h1>Time Management System</h1>
    </header>
    <nav class="main-menu sidebar-hidden">
    <ul>
        <li>
        <i class="fa fa-home fa-2x"></i>
        <span class="nav-text">Dashboard</span>
        </li>
        <li>
        <i class="fa fa-book fa-2x"></i>
        <span class="nav-text">Report</span>
        </li>
        <li class="logout">
        <form action="/logout" method="GET">
            <button type="submit">
            <i class="fa fa-power-off fa-2x"></i>
            <span class="nav-text">Logout</span>
            </button>
        </form>
        </li>
    </ul>
    </nav>
    <div class="container">
        <div class="header">
            <h3>Dashboard</h3>
        </div>
    <div class="cards">
        <div class="card">  
            <div class="card-blue">
                <h3 class="card-text"><span id="studentCount"></span></h3> 
                <p class="card-title">Total Students</p>
            </div>
        </div>
        <div class="card card-green">
        <h3>53%</h3>
        <p>Attendance</p>
        </div>
    </div>
    <div class="buttons">
        <button class="btn btn-primary" onclick="showAttendance('Java')">Java</button>
        <button class="btn btn-secondary" onclick="showAttendance('Python')">Python</button>
    </div>

    <h2>Attendance Records</h2>
    <table id="attendanceTable" border="1">
      <thead>
        <tr>
          <th>Student Name</th>
          <th>Email</th>
          <th>Subject</th>
          <th>Join Time</th>
        </tr>
      </thead>
      <tbody></tbody>  </table> <script> function selectCourse(courseName, route) { fetch(route, { method: 'POST', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify({ courseName: courseName }) }) .then(response => response.json()) .then(data => { window.location.href = '/admin-dashboard'; }) .catch(error => { console.error('Error:', error); }); } document.getElementById('dashboard-link').addEventListener('click', function() { document.getElementById('welcome-message').style.display = 'none'; document.getElementById('course-selection').style.display = 'flex'; }); </script>

    <script>
      function showAttendance(subject) {
          fetch('/getAttendanceData')
            .then(response => response.json())
            .then(data => {
              const attendanceTable = document.getElementById('attendanceTable').getElementsByTagName('tbody')[0]; // Get the table body
              attendanceTable.innerHTML = ''; // Clear existing rows
    
              // Filter data by subject
              const filteredData = data.filter(record => record.subject === subject);
    
              filteredData.forEach(record => {
                const row = attendanceTable.insertRow();
                const nameCell = row.insertCell();
                const emailCell = row.insertCell();
                const subjectCell = row.insertCell();
                const timeCell = row.insertCell();
    
                nameCell.textContent = record.studentName;
                emailCell.textContent = record.studentEmail;
                subjectCell.textContent = record.subject;
                timeCell.textContent = record.joinTime;
              });
            })
            .catch(error => console.error('Error fetching attendance data:', error));
        }
    
      window.onload = function() {
        fetch('/api/getStudentCount')
          .then(response => response.json())
          .then(data => {
            const studentCountElement = document.getElementById('studentCount');
            if (studentCountElement) {
              studentCountElement.textContent = data.totalStudents;
            }
          })
          .catch(error => console.error('Error fetching student count:', error));
      };
    </script>
<script>
    const sidebar = document.querySelector('.main-menu');
    let timeoutId = null;

    sidebar.addEventListener('mouseover', () => {
        sidebar.classList.remove('sidebar-hidden');
        sidebar.classList.add('sidebar-shown');
        clearTimeout(timeoutId);
    });

    sidebar.addEventListener('mouseout', () => {
        timeoutId = setTimeout(() => {
            sidebar.classList.remove('sidebar-shown');
            sidebar.classList.add('sidebar-hidden');
        }, 300);
    });
</script>

  </body>
</html>

