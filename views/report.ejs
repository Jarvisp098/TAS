<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>Attendance Report</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script> <!-- Include Moment.js -->
</head>
<body>
    <h1>Attendance Report</h1>
    <table class="report-table">
        <thead>
            <tr>
                <th>Student Name</th>
                <th>Email Address</th>
                <th>Course Enrolled</th>
                <th>Lecture Join Time</th>
                <th>Lecture Leave Time</th>
                <th>Attendance Status</th>
            </tr>
        </thead>
        <tbody>
            <% reportData.forEach(record => { %>
                <tr>
                    <td><%= record.studentName %></td>
                    <td><%= record.emailAddress %></td>
                    <td><%= record.courseEnrolled %></td>
                    <td><%= record.lectureJoinTime ? moment(record.lectureJoinTime).format('hh:mm A') : 'N/A' %></td>
                    <td><%= record.lectureLeaveTime ? moment(record.lectureLeaveTime).format('hh:mm A') : 'N/A' %></td>
                    <td><%= record.attendanceStatus %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>

